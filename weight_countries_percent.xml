<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmshipment" method="upgrade">
	<name>By weight, ZIP and countries Percentage</name>
	<creationDate>02-2015</creationDate>
	<author>The VirtueMart Development Team and Joomla Empresa Development Team</author>
	<authorUrl>http://www.joomlaempresa.es/en</authorUrl>
	<copyright>Copyright (C) 2004-2015 Virtuemart Team and Joomla Empresa Team. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>3.0.4</version>
	<description>VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT</description>
	<files>
		<filename plugin="weight_countries_percent">weight_countries_percent.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_vmshipment_weight_countries_percent.ini</language>
		<language tag="en-GB">en-GB.plg_vmshipment_weight_countries_percent.sys.ini</language>
	</languages>
	<vmconfig>
		<fields name="params">
			<fieldset name="template">
				<field name="shipment_logos" type="vmfiles" directory="/images/stories/virtuemart/shipment" hide_none="1" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_LOGOS" size="40" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_LOGOS_DESC" />
			</fieldset>
			<fieldset name="restrictions">
				<field name="show_on_pdetails" type="radio" scope="com_virtuemart" default="1" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_SHOW_ON_PRDETAILS" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_SHOW_ON_PRDETAILS_TIP">
					<option value="0">COM_VIRTUEMART_NO</option>
					<option value="1">COM_VIRTUEMART_YES</option>
				</field>
				<field name="countries" type="vmcountries"  multiple="true" scope="com_virtuemart" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_COUNTRIES" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_COUNTRIES_DESC"/>
				<field name="zip_start" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ZIP_START" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ZIP_START_DESC"/>
				<field name="zip_stop" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ZIP_STOP" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ZIP_STOP_DESC"/>
				<field name="weight_start" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_START" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_START_DESC"/>
				<field name="weight_stop" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_STOP" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_STOP_DESC"/>
				<field name="weight_unit" type="vmweightunit" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_UNIT" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_WEIGHT_UNIT_DESC"/>
				<field name="nbproducts_start" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_NBPRODUCTS_START" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_NBPRODUCTS_START_DESC"/>
				<field name="nbproducts_stop" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_NBPRODUCTS_STOP" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_NBPRODUCTS_STOP_DESC"/>
				<field name="orderamount_start" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ORDERAMOUNT_START" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ORDERAMOUNT_START_DESC"/>
				<field name="orderamount_stop" type="text" size="10" default="" label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ORDERAMOUNT_STOP" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_ORDERAMOUNT_STOP_DESC"/>
			</fieldset>
			<fieldset name="fee">
				<field name="shipment_cost" type="text"   label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_COST" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_COST_DESC" default="0" />
				<field name="package_fee" type="text"   label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_PACKAGE_FEE" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_PACKAGE_FEE_DESC" />
				<field name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_TAX" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_TAX_DESC" default="0" />
				<field name="free_shipment" type="text"    label="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_FREE_SHIPPING_AMOUNT" description="VMSHIPMENT_WEIGHT_COUNTRIES_PERCENT_FREE_SHIPPING_AMOUNT_DESC" default="" />
			</fieldset>
		</fields>
	</vmconfig>
</extension>
